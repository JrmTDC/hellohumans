{
     "extends": "@adonisjs/tsconfig/tsconfig.app.json",
     "compilerOptions": {
          "rootDir": "./",
          "outDir": "./.output",
          "module": "NodeNext",
          "moduleResolution": "NodeNext",
          "strict": true,
          "baseUrl": "./",
          "paths": {
               "#controllers/*": [
                    "app/controllers/*"
               ],
               "#middleware/*": [
                    "app/middleware/*"
               ],
               "#services/*": [
                    "app/services/*"
               ],
               "#start/*": [
                    "start/*"
               ],
               "#config/*": [
                    "config/*"
               ]
          }
     },
     "include": ["**/*.ts", "bin/**/*.ts"]
}